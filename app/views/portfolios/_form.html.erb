<%= form_for(@portfolio_item) do |f| %>

  <% if @portfolio_item.errors.any? %>
    <% @portfolio_item.errors.full_messages.each do |e| %>
      <%= alert_generator e %>
    <% end %>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :subtitle %>
        <%= f.text_field :subtitle, class: "form-control" %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control", rows:  13 %>
      </div>
    </div>

    <div class="col-md-12">
      <h2>Technologies Used:</h2>

      <div>
        <%= f.fields_for :technologies do |tech_form| %>
          <div class="form-group">
            <%= render 'technology_fields', f: tech_form %>
          </div>
        <% end %>
        
        <div>
            <%= link_to_add_association 'Add Technology', f, :technologies %>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit "Save Portfolio Item", class: "btn btn-primary btn-block" %>
      </div>
    </div>
  </div>
<% end %>