<div class="container">
  <div class="row">
    <div class="col-md-7">
      <!--Display only if image is false-->
      <%= image_tag @portfolio_item.main_image unless @portfolio_item.main_image.nil? %>
    </div>

    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>

      <hr>

      <em><%= @portfolio_item.subtitle %></em>

      <p><%= @portfolio_item.body %></p>

      <hr>

      <h3>Technologies Used:</h3>

      <% @portfolio_item.technologies.each do |t| %>
        <p><%= t.name %></p>
      <% end %>

      <% if logged_in?(:site_admin) %>
        <div>
          <%= link_to "EDIT", edit_portfolio_path(@portfolio_item), 
              class: "btn btn-warning" %>
        </div>
      <% end %>

    </div>
  </div>
</div>