<div class="container">
  <div class="row">
    <div class="col-md-7">
      <!--Display only if image is false-->
      <%= image_tag @portfolio_item.main_image unless @portfolio_item.main_image.nil? %>
    </div>

    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>

      <hr>

      <p><%= @portfolio_item.subtitle %></p>
      <p><%= @portfolio_item.body %></p>

      <hr>

      <h3>Technologies Used:</h3>

      <% @portfolio_item.technologies.each do |t| %>
        <p><%= t.name %></p>
      <% end %>

    </div>
  </div>
</div>